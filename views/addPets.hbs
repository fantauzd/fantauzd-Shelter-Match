<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Option</title>
    <style>
        /* Style for the container */
        .form-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 50px;
        }

        /* Style for the back button */
        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
        }

        /* Style for the radio buttons and label */
        .options {
            display: flex;
            gap: 20px;
            font-size: 18px;
            margin: 20px 0;
        }

        /* Style for the submit button */
        .submit-button {
            background-color: green;
            color: white;
            padding: 10px 20px;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <!-- Back button -->
    <button class="back-button" onclick="window.history.back();">←</button>

    <!-- Form Container -->
    <div class="form-container">
        <h2>Select Option</h2>
        <form id="optionForm" action="" method="GET">
            <!-- Radio buttons for selecting Typical or Long -->
            <div class="options">
                <label>
                    <input type="radio" name="option" value="typical" required>
                    Typical
                </label>
                <label>
                    <input type="radio" name="option" value="long">
                    Long
                </label>
            </div>

            <!-- Submit button -->
            <button type="submit" class="submit-button">✔</button>
        </form>
    </div>

    <script>
        // JavaScript to handle form submission based on selected option
        document.getElementById('optionForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission

            // Check which option is selected
            const selectedOption = document.querySelector('input[name="option"]:checked').value;
            
            // Redirect to the appropriate page based on the selected option
            if (selectedOption === 'typical') {
                window.location.href = 'addtypical.hbs';
            } else if (selectedOption === 'long') {
                window.location.href = 'addlong.hbs';
            }
        });
    </script>

</body>
</html>