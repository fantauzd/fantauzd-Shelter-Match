<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Option</title>
    <style>
        /* Style for the container */
        .form-area {
            background-color: rgb(250, 250, 193);
            margin: 12%;
            margin-top: 4%;
            height: 500px ;
            border-radius: 25px;
            border: #2c2c2c;
        }

        .form-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 40px;
        }

        /* Style for the back button */
        .back-button {
            position: relative;
            top: 12px;
            left: 7%;
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
        }
        .back-icon {
            max-width: 50px;
            max-height: 50px;
        }

        /* Style for the radio buttons, labels, and explanation */
        .options {
            display: flex;
            flex-direction: column; /* Stack options vertically */
            gap: 20px;
            font-size: 18px;
            margin: 20px 0;
        }

        .option-label {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .option-explanation {
            font-size: 14px;
            color: #555;
            margin-left: 28px; /* Align explanation text with labels */
        }

        /* Style for the submit button */
        .submit-button {
            background-color: green;
            color: white;
            padding: 10px 20px;
            font-size: 18px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-left: 40%;
        }
        
    </style>
</head>
<body>

    <div class="form-area">
        <!-- Back button -->
        <button class="back-button" onclick="window.history.back();">
            <img src="/img/page/back.svg" alt="Back Icon" class="back-icon">
        </button>

        <!-- Form Container -->
        <div class="form-container">
            <h2>Which form do you prefer?</h2>
            <form id="optionForm" action="" method="GET">
                <!-- Radio buttons for selecting Typical or Long -->
                <div class="options">
                    <!-- Typical Option -->
                    <div>
                        <label class="option-label">
                            <input type="radio" name="option" value="typical" required>
                            Typical
                        </label>
                        <p class="option-explanation">Guided input for adding a Pet. Recommended for General Use.</p>
                    </div>
                    
                    <!-- Long Option -->
                    <div>
                        <label class="option-label">
                            <input type="radio" name="option" value="long">
                            Long
                        </label>
                        <p class="option-explanation">Input form with minimal guidance. For experienced Users.</p>
                    </div>
                </div>

                <!-- Submit button -->
                <button type="submit" class="submit-button">âœ”</button>
            </form>
        </div>
    </div>

    <script>
        // JavaScript to handle form submission based on selected option
        document.getElementById('optionForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission

            // Check which option is selected
            const selectedOption = document.querySelector('input[name="option"]:checked').value;
            
            // Redirect to the appropriate page based on the selected option
            if (selectedOption === 'typical') {
                window.location.href = 'addTypical';
            } else if (selectedOption === 'long') {
                window.location.href = 'addLong';
            }
        });
    </script>

</body>
</html>
